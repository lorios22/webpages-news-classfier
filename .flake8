[flake8]
max-line-length = 88
extend-ignore = E203,W503,E501,F401,F541,F841,W291,W293,E402,E722

exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    *.egg-info,
    venv,
    env,
    .venv,
    .env

per-file-ignores =
    tests/*:F401,F841,E402
    examples/*:F401,F841,E402
    scripts/*:F401,F841,E402 